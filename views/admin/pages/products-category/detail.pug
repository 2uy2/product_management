extends ../../layouts/default.pug 
include ../../mixins/alert.pug

block main
    +alert-error(5000)
    +alert-success(5000)

    if(record.title)
        h1(class="mb-4") #{record.title}

    if (record.parent_id)
        if(record2)
            div(class="mb-4") danh mục cha là #{record2.title}
    if(record.parent_id=="") 
        p thẻ cao nhất
    

    if (record.thumbnail)
        div(class="mb-4")
            img(
                src=record.thumbnail
                style="width: 200px"
        )

    if (record.status)
        div(class="mb-4")
        span Trạng thái:
        if (record.status === "active")
            span(class="badge badge-success") Hoạt động
        else
            span(class="badge badge-danger") Dừng hoạt động

    if (record.position)
        div(class="mb-4") Vị trí: <b>#{record.position}</b>

    if (record.description)
        div(class="mb-4") !{record.description}

    a(
        href=`${prefixAdmin}/products-category/edit/${record.id}`
        class="btn btn-warning btn-sm ml-1"
    ) Chỉnh sửa

    script(src="/admin/js/product-category.js" type="module")
    