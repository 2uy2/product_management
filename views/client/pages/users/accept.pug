extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/box-head.pug

block main 

    .container.my-3 
        include ../../partials/list-btn-users.pug 

        .row 
            .col-12 
                +box-head("Lời mời đã nhận")
        
        .row 
            each user in users
                .col-6
                    div(class="box-user add")
                        div(class="inner-avatar")
                            img(
                                src=(user.avatar ? user.avatar : "/images/defaultAvatar.png")
                                alt= user.fullName
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{user.fullName}
                            div(class="inner-buttons")
                                button(
                                    class="btn btn-sm btn-primary mr-1"
                                    btn-accept-friend = user.id

                                ) chấp nhận 
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-refuse-friend = user.id
                                ) từ chối 
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-deleted-friend
                                    disabled
                                ) đã xoá 

    block script 
        script(type ="module" src="/js/users.js")